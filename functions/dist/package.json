{
  "name": "functions",
  "public": "dist/app-server",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "node cp-angular && tsc",
    "serve": "npm run build:ssr && firebase emulators:start --only functions",
    "shell": "npm run build:ssr && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12"
  },
  "rewrites": [
    {
      "source": "**",
      "function": "ssr"
    }
  ],
  "main": "main.js",
  "dependencies": {
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.3.0",
    "fs-extra": "^9.0.0"
  },
  "devDependencies": {
    "tslint": "^5.12.0",
    "typescript": "^3.8.3",
    "firebase-functions-test": "^0.1.6"
  },
  "private": true
}
